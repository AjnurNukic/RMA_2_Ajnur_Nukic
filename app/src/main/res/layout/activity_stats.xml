<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tvoja statistika"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvGamesPlayed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odigrane igre: 0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pobjede: 0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trenutni niz: 0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMaxStreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Najveći niz: 0"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raspodjela pogodaka po pokušajima:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvAttempt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 1. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAttempt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 2. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAttempt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 3. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAttempt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 4. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAttempt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 5. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAttempt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogodaka u 6. pokušaju: 0"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</ScrollView>
